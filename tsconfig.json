
{
  "compileOnSave": true,
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "stripInternal": true,
      "jsx": "preserve",
      "outDir": "dist",
      "lib": [ "es2015" ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "test"
  ]
}